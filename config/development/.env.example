# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
PROJECT_NAME=Turkish Legal AI API
API_V1_STR=/api/v1
SERVER_HOST=http://localhost
SERVER_PORT=8000

# Security
SECRET_KEY=your-secret-key-here  # Change this in production!
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres  # Change this in production!
POSTGRES_DB=legal_ai

# External APIs
OPENAI_API_KEY=sk-your-api-key-here
HUGGINGFACE_TOKEN=hf_your-token-here  # Optional but recommended

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
LLM_MODEL=gpt-4-turbo-preview

# Vector Store Configuration
COLLECTION_NAME=turkish_criminal_law

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
